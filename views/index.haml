%div.row
  %section.span11.star-stream
    - @tweets.each do |tweet|
      %article.star-item
        %div.star-image
          %img{ :height => 48, :width => 48, :src => "#{tweet.image_url}" }
        %div.star-content
          %div.star-row
            %div.star-source
              = tweet.source
          %div.star-row
            %div.star-text
              = tweet.content
          %div.star-row
            %span.star-timestamp
              = pretty_time(tweet.ocreated_at)
            %span.star-actions
              %span.star-action.archive
                %a{ :href => "#"}
                  %span
                    %img{ :height => 16, :width => 16, :src => "/images/folder-open.png" }
                    %b Archive
              %span.star-action.unstar
